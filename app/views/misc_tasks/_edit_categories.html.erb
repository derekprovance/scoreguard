<%= form_for(@task_categories) do |f| %>

  <div class="form-group">
    <%= f.label :rename_category %>*<br>
    <%= f.text_field :category, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to 'Back', '/misc_tasks', :class => 'btn btn-default' %>
  </div>
<% end %>
