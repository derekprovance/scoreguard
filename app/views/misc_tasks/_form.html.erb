<%= form_for(@misc_tasks) do |f| %>

  <div class="form-group">
    <%= f.label :name %>*<br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :earned_points %>*<br>
    <%= f.number_field :actual_points, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :total_points %>*<br>
    <%= f.number_field :total_points, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :weight %>*<br>
    <%= f.number_field :weight, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to 'Back', '/misc_tasks', :class => 'btn btn-default' %>
  </div>
<% end %>
